{% extends 'ABPlatformBundle::layout.html.twig' %}

{% block title %}
    Votre panier - {{ parent() }}
{% endblock %}

{% block body %}
    <h1 class="text-center">Choisissez la quantité désirée:</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.titre, "Titre du livre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
        {{ form_errors(form.titre) }}
        <div class="col-md-6">
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.auteur, "Auteur du livre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
        {{ form_errors(form.auteur) }}
        <div class="col-md-6">
            {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.prix, "Prix du livre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
        {{ form_errors(form.prix) }}
        <div class="col-md-6">
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.quantite, "Quantité ", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
        {{ form_errors(form.quantite) }}
        <div class="col-md-6">
            {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-offset-6">
        {{ form_widget(form.valider, {'attr': {'class': 'btn-primary btn-lg'}}) }}
        <a class="btn-danger btn-lg col-md-offset-1" href="{{ path('ab_platform_read') }}">Annuler</a>
    </div>


    {{ form_rest(form) }}
    {{ form_end(form) }}

    <p>
    {% if app.session.flashBag.has('notice') %}
        {% for msg in app.session.flashBag.get('notice') %}
            <p class="alert alert-info">message flash: {{ msg }} </p>
        {% endfor %}
    {% endif %}
    </p>

{% endblock %}