{% extends 'ABPlatformBundle::layout.html.twig' %}

{% block title %}
    Votre panier - {{ parent() }}
{% endblock %}

{% block body %}

    <h1 class="text-center">Contenu de mon panier:</h1>

    {% for book in panier %}
        <p>{{ bookpanier.book.auteur }} - {{ bookpanier.book.titre }}</p>
        <p>Quantite choisie : {{ panier.quantite }} </p>
        <p>Prix : {{ bookpanier.book.prix * panier.quantite }}</p>
    {% endfor %}
    <div class="col-md-offset-5">
        <a class="btn-lg btn-primary" href="{{ path('ab_platform_compte') }}">Valider le panier</a>
        <a class="btn-lg btn-danger" href="{{ path('ab_platform_read') }}">Annuler</a>
    </div>
    <p>
    {% if app.session.flashBag.has('notice') %}
        {% for msg in app.session.flashBag.get('notice') %}
            <p class="alert alert-info">message flash: {{ msg }} </p>
        {% endfor %}
    {% endif %}
    </p>

{% endblock %}