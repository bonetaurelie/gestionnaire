{% extends 'ABPlatformBundle::layout.html.twig' %}

{% block title %}
Ajouter un livre - {{ parent() }}
{% endblock %}

{% block body %}
<h1 class="text-center">Saisissez votre livre:</h1>
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{{ form_errors(form) }}

<div class="form-group">
    {{ form_label(form.titre, "Titre du livre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
    {{ form_errors(form.titre) }}
    <div class="col-md-6">
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.auteur, "Auteur du livre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
    {{ form_errors(form.auteur) }}
    <div class="col-md-6">
        {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.prix, "Prix du livre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
    {{ form_errors(form.prix) }}
    <div class="col-md-6">
        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.quantite, "Quantit√© disponible", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
    {{ form_errors(form.quantite) }}
    <div class="col-md-6">
        {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="col-md-offset-6 col-sm-offset-5 col-xs-offset-5">
    {{ form_widget(form.valider, {'attr': {'class': 'btn-primary btn-lg'}}) }}
    <a class="btn-lg btn-danger col-md-offset-1" href="{{ path('ab_platform_read') }}">Annuler</a>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
{% endblock %}