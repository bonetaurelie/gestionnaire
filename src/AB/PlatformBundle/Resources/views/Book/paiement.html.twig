{% extends 'ABPlatformBundle::layout.html.twig' %}

{% block title %}
    Paiement - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="col-md-offset-9">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            Connecté en tant que {{ app.user.username }}<br/>

            <a class="btn btn-primary col-md-offset-2" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
        {% endif %}
    </div>
    <h1>Récapitulatif de votre panier:</h1>


    <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" >
        <input type="hidden" name="amount" value="_s-xclick">
        <table>
            <tr><td><input type="hidden" name="on0" value="Livres à la vente">Livres à la vente</td></tr><tr><td><select name="os0">
                        <option value="Les sirènes de Saint-Malo">Les sirènes de Saint-Malo €7,90 EUR</option>
