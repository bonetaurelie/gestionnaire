                        <option value="Une vie entre deux océans">Une vie entre deux océans €7,90 EUR</option>
                        <option value="Brûlée vive">Brûlée vive €18,90 EUR</option>
                        <option value="De coeur inconnu">De coeur inconnu €17,00 EUR</option>
                        <option value="Une autre idée du bonheur">Une autre idée du bonheur €21,50 EUR</option>
                    </select> </td></tr>
        </table>
        <input type="hidden" name="currency_code" value="EUR">
        <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
">
        <input type="image" src="https://www.paypalobjects.com/fr_FR/FR/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal, le réflexe sécurité pour payer en ligne">
        <img alt="" border="0" src="https://www.paypalobjects.com/fr_FR/i/scr/pixel.gif" width="1" height="1">
    </form>

<br/>
<a class="btn btn-danger" href="{{ path('ab_platform_read') }}">Annuler la commande</a>

{% endblock %}