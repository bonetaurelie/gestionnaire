{% extends 'ABPlatformBundle::layout.html.twig' %}

{% block title %}
    Cr√©ation d'un espace client - {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Enregistrement du nouveau client:</h1>
    <div class="row">
        <div class="clo-md-2"></div>
        <div class="col-md-8">
            {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="{{ path('login_check') }}" method="post">

                <div class="form-group">
                    <label for="username">Login:</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe:</label>
                    <input type="password" class="form-control" id="password" name="_password"/>
                </div>

                <button type="submit" class="btn btn-primary">Connexion</button>
            </form>
        </div>
    </div>
{% endblock %}