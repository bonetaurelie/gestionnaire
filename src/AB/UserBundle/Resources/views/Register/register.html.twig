{% extends "ABUserBundle::layout.html.twig" %}

{% block body %}

    {% block fos_user_content %}
        <h1 class="text-center">Créez votre compte client:</h1>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.email, "Votre email", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.email) }}
            <div class="col-md-6">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.username, "Votre pseudo", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.username) }}
            <div class="col-md-6">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, "Votre mot de passe", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.plainPassword.first) }}
            <div class="col-md-6">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, "Saississez à nouveau votre mot de passe", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.plainPassword.second) }}
            <div class="col-md-6">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <button  class="btn btn-primary col-md-offset-6" type="submit">Enregistrer</button>

        {{ form_rest(form) }}
        {{ form_end(form) }}

    {% endblock fos_user_content %}
{% endblock %}